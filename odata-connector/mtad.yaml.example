_schema-version: 3.3.0
ID: sap-odata-connector-<app-version>
version: "<app-version>"
modules:
- name: sap-odata-connector
  type: application
  properties:
    CAMUNDA_CLIENT_MODE: self-managed
    CAMUNDA_CLIENT_AUTH_CLIENTID: <client-id>
    CAMUNDA_CLIENT_AUTH_CLIENTSECRET: <client-secret>
    CAMUNDA_CLIENT_AUTH_TOKENURL: '<token-url>'
    CAMUNDA_CLIENT_ENABLED: true
    CAMUNDA_CLIENT_AUTH_AUDIENCE: <zeebe-audience>
    CAMUNDA_CLIENT_GRPCADDRESS: <grpc-address>
    CAMUNDA_CLIENT_RESTADDRESS: <rest-address>
    # CAMUNDA_CLIENT_ZEEBE_PREFERRESTOVERGRPC: true
    CAMUNDA_CONNECTOR_POLLING_ENABLED: false
    CAMUNDA_CONNECTOR_WEBHOOK_ENABLED: false
    # CAMUNDA_CONNECTOR_SECRETPROVIDER_CONSOLE_ENABLED: true -- This is the one downside of using self-managed. We can't use the SAAS secret provider
    LOGGING_LEVEL_ROOT: WARN # any of TRACE, DEBUG, INFO, WARN, ERROR, OFF
    LOGGING_LEVEL_IO_CAMUNDA_CONNECTOR_SAP: DEBUG # any of TRACE, DEBUG, INFO, WARN, ERROR, OFF
  requires:
    - name: dest-camunda-odata-connector
    - name: conn-camunda-odata-connector
  parameters:
    disk-quota: 2G
    docker:
      image: camunda/sap-odata-connector:<pick your version according to Camunda release, e.g. 8.6.1>
    enable-ssh: true
    health-check-type: process
    instances: 1
    memory: 1G
resources:
  - name: dest-camunda-odata-connector
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
      service-plan: lite
  - name: conn-camunda-odata-connector
    type: org.cloudfoundry.managed-service
    parameters:
      service: connectivity
      service-plan: lite
