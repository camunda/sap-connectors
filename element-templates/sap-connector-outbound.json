{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "SAP connector",
  "id": "io.camunda.connector.SAP.outbound.v1",
  "version": 1,
  "description": "interact with an SAP system (S/4 or ECC)",
  "appliesTo": [
    "bpmn:Task"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "entriesVisible": true,
  "groups": [
    {
      "id": "sap",
      "label": "SAP - base"
    },
    {
      "id": "advanced",
      "label": "SAP - optional/advanced",
      "openByDefault": false
    }
  ],
  "properties": [
    {
      "value": "io.camunda:sap:outbound:1",
      "binding": {
        "property": "type",
        "type": "zeebe:taskDefinition"
      },
      "type": "Hidden"
    },
    {
      "group": "sap",
      "id": "tpl_Destination",
      "label": "BTP destination name (e.g. a4h)",
      "description": "BTP destination pointing to the SAP System to connect to",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_Destination"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "group": "sap",
      "id": "tpl_HttpMethod",
      "label": "HTTP Method",
      "description": "read, write, update or delete operation?",
      "type": "Dropdown",
      "value": "GET",
      "choices": [
        {
          "name": "GET",
          "value": "GET"
        },
        {
          "name": "POST",
          "value": "POST"
        },
        {
          "name": "PUT",
          "value": "PUT"
        },
        {
          "name": "PATCH",
          "value": "PATCH"
        },
        {
          "name": "DELETE",
          "value": "DELETE"
        }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_HttpMethod"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "group": "sap",
      "id": "tpl_ODataService",
      "label": "OData base service path",
      "description": "absolute base path, e.g. /sap/opu/odata/dmo/case",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_ODataService"
      },
      "constraints": {
        "notEmpty": true,
        "pattern": {
          "value": "^(\\/|=).*",
          "message": "must start with a /"
        }
      }
    },
    {
      "group": "sap",
      "id": "tpl_EntityOrEntitySet",
      "label": "OData Entity/-Set",
      "description": "query target (e.g. bike(12) ), can also contain navigation properties\n( e.g. bike('12')/toWheels/toBolts )",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_EntityOrEntitySet"
      },
      "constraints": {
        "notEmpty": true,
        "pattern": {
          "value": "^[^/].*$",
          "message": "must not start with a /"
        }
      }
    },
    {
      "group": "sap",
      "id": "tpl_ODataVersion",
      "label": "OData version",
      "description": "what version of the OData protocol the above service uses",
      "type": "Dropdown",
      "value": "v4",
      "choices": [
        {
          "name": "v2",
          "value": "v2"
        },
        {
          "name": "v4",
          "value": "v4"
        }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_ODataVersion"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "group": "sap",
      "id": "tpl_Payload",
      "label": "Request Body in stringified JSON format",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_Payload"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "oneOf": [
          "PATCH",
          "POST"
        ]
      }
    },
    {
      "group": "sap",
      "label": "Result Variable",
      "description": "Name of variable to store JSON response in",
      "type": "String",
      "feel": "optional",
      "optional": true,
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultVariable"
      }
    },
    {
      "label": "Result expression",
      "description": "Expression to map the response into process variables. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/#result-expression\" target=\"_blank\">documentation</a>",
      "group": "sap",
      "type": "Text",
      "optional": true,
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_filter",
      "label": "$filter",
      "description": "$filter on EntitySet",
      "type": "String",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_filter"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "equals": "GET"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_top",
      "label": "$top",
      "description": "only the first $top results of an EntitySet",
      "type": "Number",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_top"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "equals": "GET"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_skip",
      "label": "$skip",
      "description": "skip the first $skip results of an EntitySet",
      "type": "Number",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_skip"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "equals": "GET"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_orderby",
      "label": "$orderby",
      "description": "order the EntitySet by one or more properties",
      "type": "String",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_orderby"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "equals": "GET"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_expand",
      "label": "$expand",
      "description": "expand an Entity/-Set by another Entity/-Set",
      "type": "String",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_expand"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "equals": "GET"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_select",
      "label": "$select",
      "description": "only select $select properties of an Entity/-Set",
      "type": "String",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_select"
      },
      "condition": {
        "property": "tpl_HttpMethod",
        "equals": "GET"
      }
    },
    {
      "group": "advanced",
      "id": "tpl_inlinecount",
      "label": "$inlinecount result in EntitySet",
      "type": "Boolean",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_inlinecount"
      },
      "condition": {
        "allMatch": [
          {
            "property": "tpl_ODataVersion",
            "equals": "v4"
          },
          {
            "property": "tpl_HttpMethod",
            "equals": "GET"
          }
        ]
      }
    },
    {
      "group": "advanced",
      "id": "tpl_count",
      "label": "$count of EntitySet",
      "type": "Boolean",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_count"
      },
      "condition": {
        "allMatch": [
          {
            "property": "tpl_ODataVersion",
            "equals": "v4"
          },
          {
            "property": "tpl_HttpMethod",
            "equals": "GET"
          }
        ]
      }
    },
    {
      "group": "advanced",
      "id": "tpl_search",
      "label": "search for $search in EntitySet",
      "type": "String",
      "optional": true,
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "tpl_search"
      },
      "condition": {
        "allMatch": [
          {
            "property": "tpl_ODataVersion",
            "equals": "v4"
          },
          {
            "property": "tpl_HttpMethod",
            "equals": "GET"
          }
        ]
      }
    },
    {
      "label": "Error Expression",
      "description": "Expression to define BPMN Errors to throw",
      "group": "errors",
      "type": "Text",
      "optional": true,
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "errorExpression"
      }
    }
  ]
}